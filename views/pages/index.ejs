<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Template NEM</title>
        <link rel="stylesheet" href="../../public/index.css">
    </head>
    <body>
        <div class="head">
            <h1><a href="/adduser" 
                style="text-decoration: none;">
                Add User</a>
            </h1>
            <h1><a href="/deluser" 
                style="text-decoration: none;">
                Delete User</a>
            </h1>
        </div>
    
        <br/>
            <% users.forEach(function(user){ %>
                <ul id="list">
                    <li>id : <%= user._id %></li>
                    <li>First name : <%= user.fname %></li>
                    <li>Last name : <%= user.lname %></li>
                </ul>
            <% })%>
        <br/>
        <%- include ("../partials/footer") %>
    </body>
    <style>
        .head{
            display: flex;
            flex-flow: row;
            justify-content: space-evenly;
        }
    </style>
</html>